# EquityScope Environment Configuration
# Copy this file to .env and fill in your API keys

# AI Services (Optional but recommended for enhanced features)
ANTHROPIC_API_KEY=your_claude_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Kite Connect API (Optional - for real-time Indian market data)
KITE_API_KEY=your_kite_api_key
KITE_API_SECRET=your_kite_api_secret
KITE_ACCESS_TOKEN=your_access_token_after_oauth

# Database Configuration (Optional - defaults to file-based storage)
DATABASE_URL=postgresql://user:password@localhost:5432/equityscope

# Redis Configuration (Optional - for enhanced caching)
REDIS_URL=redis://localhost:6379/0

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
